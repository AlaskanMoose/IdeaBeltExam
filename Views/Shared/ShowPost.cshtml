<link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/slate/bootstrap.min.css" rel="stylesheet" integrity="sha384-RpX8okQqCyUNG7PlOYNybyJXYTtGQH+7rIKiVvg1DLg6jahLEk47VvpUyS+E2/uJ" crossorigin="anonymous">
<div class="container">
  <div class="row">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dash">Bright Ideas</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
        </ul>
      </div>
    </nav>
  </div>

  <div class="row">
    <h3>@ViewBag.Post.User.Alias Says:</h3>
    <h5>@ViewBag.Post.Idea</h5>
  </div>

  <div class="row">
    <h4>People who have liked this post:</h4>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Alias</th>
          <th>Name</th>
        </tr>
      </thead>
      <tbody>
        @foreach(var liker in @ViewBag.Post.Likers){
          <tr>
            <td>@liker.User.Alias</td>
            <td><a href="/showuser/@liker.User.UserId">@liker.User.FirstName</a></td>
          </tr>
        }
      </tbody>
    </table>
  </div>